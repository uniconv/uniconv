{
  "name": "image-ascii",
  "group": "image-ascii",
  "version": "1.0.0",
  "description": "Convert images to ASCII art using Python/Pillow",
  "interface": "cli",
  "executable": "ascii.py",
  "targets": ["ascii", "ascii-art", "text-art"],
  "input_formats": ["jpg", "jpeg", "png", "webp", "bmp", "gif"],
  "input_types": ["image", "file"],
  "output_types": ["text"],
  "options": [
    {
      "name": "--width",
      "type": "int",
      "default": "80",
      "description": "Output width in characters"
    },
    {
      "name": "--charset",
      "type": "string",
      "default": "standard",
      "description": "Character set: standard, simple, blocks, detailed"
    },
    {
      "name": "--invert",
      "type": "bool",
      "default": "false",
      "description": "Invert brightness (for dark backgrounds)"
    },
    {
      "name": "--color",
      "type": "bool",
      "default": "false",
      "description": "Output ANSI colored ASCII art"
    },
    {
      "name": "--html",
      "type": "bool",
      "default": "false",
      "description": "Output HTML with colored spans"
    }
  ]
}
