{
  "name": "image-grayscale",
  "group": "image-grayscale",
  "version": "1.0.0",
  "description": "Convert images to grayscale using Python/Pillow",
  "etl": "transform",
  "interface": "cli",
  "executable": "grayscale.py",
  "targets": ["grayscale", "gray", "bw"],
  "input_formats": ["jpg", "jpeg", "png", "webp", "bmp", "gif"],
  "options": [
    {
      "name": "--quality",
      "type": "int",
      "default": "85",
      "description": "Output quality (1-100)"
    },
    {
      "name": "--width",
      "type": "int",
      "description": "Output width in pixels"
    },
    {
      "name": "--height",
      "type": "int",
      "description": "Output height in pixels"
    },
    {
      "name": "--method",
      "type": "string",
      "default": "luminosity",
      "description": "Grayscale conversion method: luminosity, average, or lightness"
    }
  ]
}
