{
  "name": "video-to-gif",
  "group": "video-to-gif",
  "version": "1.0.0",
  "description": "Convert video files (MP4, MOV, AVI, WebM) to animated GIF using ffmpeg",
  "interface": "native",
  "library": "libvideo_to_gif",
  "targets": ["gif"],
  "input_formats": ["mp4", "mov", "avi", "webm", "mkv", "m4v"],
  "input_types": ["video", "file"],
  "output_types": ["image"],
  "options": [
    {
      "name": "--fps",
      "type": "int",
      "default": "10",
      "description": "Output frames per second (1-30)"
    },
    {
      "name": "--width",
      "type": "int",
      "description": "Output width in pixels (height auto-scaled to preserve aspect ratio)"
    },
    {
      "name": "--start",
      "type": "float",
      "description": "Start time in seconds"
    },
    {
      "name": "--duration",
      "type": "float",
      "description": "Duration in seconds"
    },
    {
      "name": "--loop",
      "type": "int",
      "default": "0",
      "description": "Number of loops (0 = infinite)"
    }
  ]
}
